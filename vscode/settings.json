    "editor.snippetSuggestions": "none",
    // TODO: review recommendations:
    // "editor.hideCursorInOverviewRuler": true,
    // "editor.occurrencesHighlight": false,
    // "editor.overviewRulerBorder": false,
    // "editor.scrollbar.horizontal": "hidden",
    // "editor.colorDecorators": false,
    // "editor.snippetSuggestions": "top",
    // "editor.suggestOnTriggerCharacters": false,
    // "editor.parameterHints": false,
    // "editor.quickSuggestions": false,
    // "explorer.openEditors.visible": 0,
    // "workbench.sideBar.location": "left",
    // "javascript.validate.enable": false,
    "eslint.rules.customizations": [
        // set all eslint errors/warnings to show as warnings
        { "rule": "*", "severity": "warn" },
        // disable some rules in editor (they're just annoying while coding)
        { "rule": "import/no-unused-modules", "severity": "off" },
        // { "rule": "unused-imports/no-unused-imports", "severity": "off"}
    ],
    "eslint.problems.shortenToSingleLine": true,
    "rubyTestExplorer.debugCommand": "doppler run -- rdebug-ide",
    "editor.multiCursorLimit": 100000,
    "workbench.tree.indent": 24,
    // "workbench.tree.renderIndentGuides": "always",
    "workbench.editor.empty.hint": "hidden",
    "workbench.activityBar.location": "hidden",
    "window.customTitleBarVisibility": "never",
    "extensions.ignoreRecommendations": true,
    "workbench.colorTheme": "Toybox",
    "breadcrumbs.enabled": false,
    "prisma.showPrismaDataPlatformNotification": false,
    "rubyLsp.rubyVersionManager": {
        "identifier": "mise",
        "miseExecutablePath": "/opt/homebrew/bin/mise"
    },
    "Lua.workspace.library": [
        "c:\\Users\\paige\\.vscode\\extensions\\ketho.wow-api-0.14.2\\EmmyLua\\API",
        "c:\\Users\\paige\\.vscode\\extensions\\ketho.wow-api-0.14.2\\EmmyLua\\Optional"
    ],
    "workbench.preferredHighContrastColorTheme": "Toybox",
    "gitlens.hovers.currentLine.enabled": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "cSpell.diagnosticLevel": "Hint",
    "python.defaultInterpreterPath": "/Users/paige/.local/share/mise/shims/python",
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
